<h2>Dashboard Page</h2>
<a href='/dashboard/showpublic'>Show public</a> || <a href='/dashboard/showprivate'>Show private</a> || <a href='/dashboard'>Show all</a>
<br><br><br><br>
{{#if alltasks}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Privacy</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      {{#each alltasks}}
        <tr>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>{{privacy}}</td>
          <td>{{user.displayName}}</td>
        </tr>
      {{/each}}
    </tbody>
{{/if}}
