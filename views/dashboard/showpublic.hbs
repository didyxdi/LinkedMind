<div class="layui-container">
  <blockquote>
    <h2>Dashboard</h2>
  </blockquote>
  <ul class="pagination">
    <li class="waves-effect"><a href="/dashboard">Show All</a></li>
    <li class="active"><a href="/dashboard/showpublic">Show Public</a></li>
    <li class="waves-effect"><a href="/dashboard/showprivate">Show Private</a></li>
  </ul>
  {{#if publictasks}}
    <div class="row">
      {{#each publictasks}}
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
          </div>
          <div class="card-content center-align">
            <h5>{{title}}</h5>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss'}}</td>
            <p>{{stripTags (truncate description 150)}}</p>
            <br>
            <div class="card-action center-align">
              <a href="/dashboard/{{_id}}/edit" class="btn-float btn blue">Edit</a>
              <a href="/dashboard/view/{{_id}}" class="btn-float btn green">Read More</a>
              <form action="/dashboard/{{_id}}" method="POST" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn red">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{/if}}
  <br><br><br><br>
  <a class="btn-floating btn-large waves-effect waves-light red right" href='/dashboard/add'><i class="material-icons"> + </i></a>
</div>
