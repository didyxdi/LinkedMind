<div class="layui-container">
  <blockquote>
    <h2>Community</h2>
  </blockquote>
  <div class="row">
    {{#if tasks}}
      {{#each tasks}}
        <div class="col s12 m4">
          <div class="card task-view-card-image">
            <div class="card-content center-align">
              <div class="task-view-card-text">
                <h5 style="margin-top: 0px;">{{title}}</h5>
                <td>{{formatDate createdAt 'MMM Do YYYY, h:mm:ss'}}</td>
                <p>{{stripTags (truncate description 150)}}</p>
              </div>
              <div class="chip" style="margin-top:10px; margin-bottom: 15px;">
                <img src="{{user.image}}" alt="">
                <a href="/forum/user/{{user._id}}">{{user.displayName}}</a>
              </div>
              <br>
              <div class="card-action center-align">
                <a href="/forum/view/{{_id}}" class="btn grey btn-float">Read More</a>
                <form action="/forum/{{user._id}}/{{_id}}" method="POST">
                  <button type="submit" class="btn red">
                    <i class="fas fa-heart left"></i>{{tscore}}
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
