<style>
  .secondary-menu-bar{
    clear:both;
    padding-left:30px;
    line-height:40px;
    height:40px;
  }
  .wrapper{
    width:100%;
  }
  .name-holder{
    margin-top:200px;
    text-align:center;
  }
  .avatar-holder{
    width:50%;
    float:left;
    text-align:right;
  }
  .avatar{
    margin-right:20px;
    float:right;
    width:50px;
    height:50px;
    line-height:50px;
    font-size:24px;
    background:#070;
    color:#fff;
    border-radius:25px;
    text-align:center;
  }
  .nick-holder{
    width:50%;
    float:right;
  }
  #nick{
    margin-left:20px;
    float:left;
    height:50px;
    line-height:50px;
    font-size:24px;
  }
  .c{
    clear:both;
    line-height:0px;
    margin:0px;
    padding:0px;
    height:0px;
  }
</style>
</head>

<div class="layui-container">
    <blockquote>
        <h2>{{user.displayName}}</h2>
    </blockquote>
    <br><br>
    <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel grey lighten-5 z-depth-1">
          <div class="row valign-wrapper">
            <div class="col s2">
              <img src="{{user.image}}" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
            </div>
            <div class="col s10">
              <div class="card horizontal">
                  <div class="card-stacked">
                      <div class="card-content">
                          <p>Likes: {{user.uscore}}</p>
                      </div>
                  </div>
              </div>
              <ul class="collection">
                Title: 
                {{#each alltasks}}
                  <li class="collection-item">{{title}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    <br><br>

    <a href='/forum' class="btn grey">Back</a>
</div>
